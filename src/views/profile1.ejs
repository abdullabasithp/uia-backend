<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff Profile</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .profile-photo {
            width: 50%;
            height: auto;
            border-radius: 50%;
            display: block;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>User Profile</h1>
            <a href="/home1" class="btn btn-primary">Home Page</a>
        </div>
        <% if (profile) { %>
            <form action="/update-profile1" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="username">CIC Number:</label>
                    <p class="form-control" id="username"><%= profile.username || '' %></p>
                </div>
                <div class="form-group">
                    <label for="name">Name of Candidate:</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%= profile.name || '' %>" required>
                </div>
                <div class="form-group">
                    <label for="dob">Date of Birth:</label>
                    <input type="date" class="form-control" id="dob" name="dob" value="<%= profile.dob ? profile.dob.toISOString().slice(0, 10) : '' %>" required>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%= profile.email || '' %>" required>
                </div>
                <div class="form-group">
                    <label for="phoneNumber">Phone Number:</label>
                    <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" value="<%= profile.phoneNumber || '' %>" required pattern="\d+" title="Please enter numbers only">
                </div>
                <div class="form-group">
                    <label for="bloodGroup">Blood Group:</label>
                    <input type="text" class="form-control" id="bloodGroup" name="bloodGroup" value="<%= profile.bloodGroup || '' %>" required>
                </div>
                <div class="form-group">
                    <label for="address">Address:</label>
                    <input type="text" class="form-control" id="address" name="address" value="<%= profile.address || '' %>" required>
                </div>
                <div class="form-group">
                    <label for="guardianName">Name of Guardian:</label>
                    <input type="text" class="form-control" id="guardianName" name="guardianName" value="<%= profile.guardianName || '' %>" required>
                </div>
                <div class="form-group">
                    <label for="guardianPhone">Phone number of Guardian:</label>
                    <input type="text" class="form-control" id="guardianPhone" name="guardianPhone" value="<%= profile.guardianPhone || '' %>" required pattern="\d+" title="Please enter numbers only">
                </div>
                <div class="form-group">
                    <label for="photo">Profile Photo:</label>
                    <% if (profile.photo) { %>
                        <img src="/uploads/<%= profile.photo %>" alt="Profile Photo" class="profile-photo">
                    <% } %>
                    <input type="file" class="form-control" id="photo" name="photo">
                </div>
                <input type="hidden" name="profileId" value="<%= profile._id %>">
                <button type="submit" class="btn btn-primary mt-3">Update Profile</button>
            </form>
        <% } else { %>
            <form action="/profile1" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="username">CIC Number:</label>
                    <input type="text" class="form-control" id="username" name="username" required pattern="\d+" title="Please enter numbers only">
                </div>
                <div class="form-group">
                    <label for="name">Name of Candidate:</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="dob">Date of Birth:</label>
                    <input type="date" class="form-control" id="dob" name="dob" required>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="phoneNumber">Phone Number:</label>
                    <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" required pattern="\d+" title="Please enter numbers only">
                </div>
                <div class="form-group">
                    <label for="bloodGroup">Blood Group:</label>
                    <input type="text" class="form-control" id="bloodGroup" name="bloodGroup" required>
                </div>
                <div class="form-group">
                    <label for="address">Address:</label>
                    <input type="text" class="form-control" id="address" name="address" required>
                </div>
                <div class="form-group">
                    <label for="guardianName">Name of Guardian:</label>
                    <input type="text" class="form-control" id="guardianName" name="guardianName" required>
                </div>
                <div class="form-group">
                    <label for="guardianPhone">Phone number of Guardian:</label>
                    <input type="text" class="form-control" id="guardianPhone" name="guardianPhone" required pattern="\d+" title="Please enter numbers only">
                </div>
                <div class="form-group">
                    <label for="photo">Profile Photo:</label>
                    <input type="file" class="form-control" id="photo" name="photo">
                </div>
                <button type="submit" class="btn btn-primary mt-3">Create Profile</button>
            </form>
        <% } %>
    </div>
</body>
</html>
